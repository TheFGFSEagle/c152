<?xml version="1.0"?>

<PropertyList>
    <path>highvolt.ac</path>

    <effect>
        <inherits-from>Aircraft/c152/Models/Effects/interior/c152-interior-compartment</inherits-from>
        <object-name>highvolt_light</object-name>
    </effect>

<animation>
 <type>material</type> 
 <object-name>highvolt_light</object-name>
 <condition>		
    <and>
        <greater-than>		
            <property>/systems/electrical/volts</property>
            <value>0.0</value>
        </greater-than>
        <less-than>		
            <property>/systems/electrical/suppliers/alternator</property>
            <value>22.0</value>
        </less-than>
      </and>
 </condition>
 <emission>	
  <red>1</red>	
  <green>0</green>	
  <blue>0</blue>
 </emission>
</animation> 
</PropertyList>
